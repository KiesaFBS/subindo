<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">


    <Button
        android:id="@+id/meuBotao"
        android:layout_width="234dp"
        android:layout_height="84dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Meus Torneios"
        android:textColor="@color/background_material_dark_1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newButton"
        app:layout_constraintVertical_bias="0.317" />

    <Button
        android:id="@+id/newButton"
        android:layout_width="230dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="276dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Novo Torneio"
        android:textColor="@color/background_material_dark_1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="423dp"
        android:layout_height="287dp"
        android:layout_margin="36dp"
        app:srcCompat="@drawable/torneio"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="38dp" />
</android.support.constraint.ConstraintLayout>